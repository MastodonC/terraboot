    - content: |
               net.ipv4.ip_forward = 1
      permissions: '644'
      path: /etc/sysctl.d/99-ip-forwarding.conf
runcmd:
    - sysctl -p
    - sysctl -w net.ipv4.ip_forward=1
    - iptables -t nat -A POSTROUTING -s 10.20.0.0/24 -o eth0 -j MASQUERADE
    - service openvpn restart
